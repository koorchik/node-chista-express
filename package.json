{
  "name": "chista-express",
  "version": "2.1.1",
  "description": "A lightweight, flexible REST API server framework built on Express.js with TypeScript support, designed for rapid API development with built-in dependency injection, session management, and WebSocket support",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:esm-package",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:esm-package": "echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "express",
    "rest-api",
    "typescript",
    "framework",
    "websocket",
    "server",
    "api"
  ],
  "author": "Chista Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/koorchik/node-chista-express.git"
  },
  "bugs": {
    "url": "https://github.com/koorchik/node-chista-express/issues"
  },
  "homepage": "https://github.com/koorchik/node-chista-express#readme",
  "peerDependencies": {
    "express": "^4.19.2 || ^5.0.0",
    "express-ws": "^5.0.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/express-ws": "^3.0.4",
    "@types/ws": "^8.18.1",
    "@types/node": "^22.10.5",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "express": "^4.19.2",
    "ws": "^8.18.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
